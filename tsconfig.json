{
  "compilerOptions": {
    /* Language & Environment */
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",

    /* Interop â€” allows gradual migration from .js/.jsx */
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,

    /* Type checking */
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* Paths */
    "baseUrl": ".",
    "paths": {
      "@/types/*": ["src/types/*"],
      "@/utils/*": ["src/utils/*"],
      "@/components/*": ["src/components/*"]
    }
  },
  "include": [
    "src/types/**/*",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx"
  ],
  "exclude": ["node_modules", "dist"]
}
